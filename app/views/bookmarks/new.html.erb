<div class="container mt-3">
  <h1>Add a new Bookmark</h1>

  <%= simple_form_for (@bookmark) do |f| %>
    <%= f.input :comment %>
    <%= f.association :list %>
    <%= f.association :movie %>
    <%= f.submit "Create Bookmark", class: "btn btn-light" %>
  <% end %>

  <p class="mt-3 btn btn-light"><%= link_to "Back to #{@list.name}", list_path(@list) %></p>
</div>
